pkgname=mintdm-themes
_pkgname=mdm
pkgver=0.1.1
pkgrel=3
pkgdesc="Nice themes for MintDM"
arch=('any')
url="http://manjaro.org"
license=('unknown')
depends=('mintdm')
source=("$pkgname-0.1.1.tar.gz::http://git.manjaro.org/manjaro-linux-graphics/mdm-themes/archive-tarball/0.1.1")

build() {
 	cd ${srcdir}/manjaro-linux-graphics-${_pkgname}-themes

	# Not add '|| return 1' this make problematic problems with Pacman 4.1
 	#rm *.gz 

 	install -d ${pkgdir}/usr/share/mdm/{themes,html-themes}
 	cp -R * ${pkgdir}/usr/share/mdm
	#rm ${pkgdir}/usr/share/mdm/themes/*/{INSTALL,README,license.txt,readme,*~,.DS_Store}
	chmod 755 ${pkgdir}/usr/share/mdm/themes/*
 	chmod 644 ${pkgdir}/usr/share/mdm/themes/*/*

}

sha256sums=('7982ba858892a856b38e024145e2bedc7d55598cb0a19aa8b7c2cbca7722ec28')
