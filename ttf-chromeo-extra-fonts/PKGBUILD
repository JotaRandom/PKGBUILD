# Maintainer: Pablo Lezaeta <cprflr88@gmail.com>

pkgname=ttf-chromeos-extra-fonts
_pkgname=crosextrafonts
pkgver=20130214
pkgrel=1
depends=('fontconfig' 'xorg-font-utils')
conflicts=('ttf-google-webfonts')
pkgdesc="Caladea font for Chrom*OS by Huerta Tipografia"
arch=('any')
group=('chromeos-fonts')
provide=('ttf-font')
license=('Apache')
source=(http://commondatastorage.googleapis.com/chromeos-localmirror/distfiles/crosextrafonts-$pkgver.tar.gz)
url="http://git.chromium.org/gitweb/"
install=$pkgname.install

package()
{
	cd $pkgdir
	install -d -m 755 usr/share/fonts/TTF
	install -m 644 $srcdir/$_pkgname-$pkgver/*.ttf usr/share/fonts/TTF/

}

md5sums=('368f114c078f94214a308a74c7e991bc')
