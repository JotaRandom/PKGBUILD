# Maintainer: Pablo Lezaeta <cprflr88@gmail.com>

pkgname=ttf-chromeos-extra-fonts
pkgver=20130324
_crosextraver=20130214
_nanumver=3.10.0
_lohitver=2.5.0
_mlver=0.740
_notover=20121206
pkgrel=1
depends=('fontconfig' 'xorg-font-utils')
conflicts=('ttf-google-webfonts' 'lohit-fonts')
pkgdesc="Extra fonts for Chrom*OS by various author"
arch=('any')
provide=('ttf-font')
license=('Apache' 'custom:IPAfont' 'custom:OFL-1.1')
url="http://git.chromium.org/gitweb/"
source=("http://commondatastorage.googleapis.com/chromeos-localmirror/distfiles/crosextrafonts-$_crosextraver.tar.gz"
	"http://commondatastorage.googleapis.com/chromeos-localmirror/distfiles/IPAMGTTC00303_r1.tar.gz"
	"http://commondatastorage.googleapis.com/chromeos-localmirror/distfiles/ko-nanumfonts-$_nanumver.tar.gz"
	"http://commondatastorage.googleapis.com/chromeos-localmirror/distfiles/lohitfonts-cros-$_lohitver.tar.gz"
	"http://commondatastorage.googleapis.com/chromeos-localmirror/distfiles/ml-anjalioldlipi-$_mlver.tar.gz"
	"http://commondatastorage.googleapis.com/chromeos-localmirror/distfiles/notofonts-$_notover.tar.gz")

install=$pkgname.install

package()
{
	cd $pkgdir

	install -d -m 755 usr/share/fonts/TTF
	install -m 644 $srcdir/crosextrafonts-$_crosextraver/*.ttf usr/share/fonts/TTF/
	install -m 644 $srcdir/IPAMGTTC00303_r1/*.ttc usr/share/fonts/TTF/
	install -m 644 $srcdir/ko-nanumfonts-$_nanumver/*.ttf usr/share/fonts/TTF/
	install -m 644 $srcdir/lohitfonts-cros-$_lohitver/*.ttf usr/share/fonts/TTF/
	install -m 644 $srcdir/ml-anjalioldlipi-$_mlver/*.ttf usr/share/fonts/TTF/
	install -m 644 $srcdir/notofonts-$_notover/*.ttf usr/share/fonts/TTF/
	install -m 644 $srcdir/notofonts-$_notover/*.ttx usr/share/fonts/TTF/

	install -d -m 755 usr/share/doc/$pkgname/{IPAMGTTC00303_r1,ko-nanumfonts,lohitfonts-cros,ml-anjalioldlipi}
	install -m 644 $srcdir/IPAMGTTC00303_r1/*.txt usr/share/doc/$pkgname/IPAMGTTC00303_r1
	install -m 644 $srcdir/IPAMGTTC00303_r1/LICENSE usr/share/doc/$pkgname/IPAMGTTC00303_r1
	install -m 644 $srcdir/ko-nanumfonts-$_nanumver/LICENSE usr/share/doc/$pkgname/ko-nanumfonts
	install -m 644 $srcdir/lohitfonts-cros-$_lohitver/LICENSE usr/share/doc/$pkgname/lohitfonts-cros
	install -m 644 $srcdir/ml-anjalioldlipi-$_mlver/LICENSE usr/share/doc/$pkgname/ml-anjalioldlipi

}

md5sums=('368f114c078f94214a308a74c7e991bc'
         'd97108ebcd21a9d0207198f8f1ab5237'
         'ae8f913acbff9c0106d75c1a6106d443'
         '2626c1d45edbff72ec2667bc81c801eb'
         '85a7927441264d3845f8aea874e2df98'
         '9f15bbdecb1362e9893c478160b8f317')
