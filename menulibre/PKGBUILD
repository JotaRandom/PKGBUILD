# Maintainer: Ner0

pkgname=menulibre
pkgver=13.04.17
pkgrel=1
pkgdesc="An advanced menu editor that provides modern features in a clean, easy-to-use interface. All without GNOME dependencies"
arch=('any')
url="https://launchpad.net/menulibre"
license=('GPL3')
depends=('gdk-pixbuf2' 'gsettings-desktop-schemas' 'gtksourceview3' 'python2' 'python2-gconf' 'python2-gobject' 'python2-xdg')
makedepends=('python2-distutils-extra')
source=("https://launchpad.net/$pkgname/trunk/$pkgver/+download/${pkgname}_$pkgver.tar.gz")
md5sums=('6f68c36b835522f44ef6461a863d4d92')

package() {
  cd "$srcdir/trunk/"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}

