# Maintainer: M0Rf30 
# Contributor: marlock

pkgname=android-udev
pkgver=51.4f8bf30
pkgrel=1
pkgdesc="Udev rules to connect Android devices to your linux box"
arch=('any')
url="https://github.com/M0Rf30/android-udev-rules"
license=('GPL')
source=("$pkgname::git+http://github.com/M0Rf30/android-udev-rules")
depends=("systemd" "libmtp")
makedepends=("git")
conflicts=("udev-android-rules")
install="android-udev.install"

pkgver() {
  cd ${pkgname}
  echo $(git rev-list --count master).$(git rev-parse --short master)
}

package() {
  cd $srcdir/${pkgname}
  mkdir -p $pkgdir/usr/lib/udev/rules.d/
  cp -av 51-android.rules $pkgdir/usr/lib/udev/rules.d/51-android.rules
  chmod a+r $pkgdir/usr/lib/udev/rules.d/51-android.rules
}

md5sums=('SKIP')
