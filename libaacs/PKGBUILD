# Contributor: Dirk Berg <berg1981@googlemail.com>

pkgname=libaacs
pkgver=0.6.0
pkgrel=1
pkgdesc="Advanced Access Content System"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://www.videolan.org/developers/libaacs.html"
depends=('libgcrypt')
makedepends=('flex' 'bison')
source=(ftp://ftp.videolan.org/pub/videolan/$pkgname/$pkgver/$pkgname-$pkgver.tar.bz2)
options=('!libtool')
provides=('libaacs')
conflicts=('libaacs-git')
md5sums=('13602038b8257ccddb7363422d19edc1')

build() {
    cd "${srcdir}"/$pkgname-$pkgver
    ./bootstrap
    ./configure --prefix=/usr
    make
}

package() {
    cd "${srcdir}"/$pkgname-$pkgver
    make DESTDIR="${pkgdir}" install
    install -Dm644 KEYDB.cfg $pkgdir/usr/share/doc/$pkgname/KEYDB.cfg
    install -Dm644 README.txt $pkgdir/usr/share/doc/$pkgname/README.txt
}
