pkgname=bfa-firmware
pkgver=3.1.2.1
_pkgver=3.1.2.1
pkgrel=1
pkgdesc="Brocade Fibre Channel HBA Firmware"
arch=('any')
license=('custom:GPL')
depend=('udev')
url=("http://www.brocade.com/services-support/drivers-downloads/CNA/Linux.page")
source=("ftp://rpmfind.net/linux/fedora/linux/development/rawhide/i386/os/Packages/b/bfa-firmware-3.1.2.1-2.fc19.noarch.rpm")

build(){

  bsdtar xvf bfa-firmware-3.1.2.1-2.fc19.noarch.rpm
}

package(){
  mkdir -p $pkgdir/usr/lib/firmware
  mv $srcdir/lib/firmware/*.bin $pkgdir/usr/lib/firmware/
  install -Dm644 $srcdir/usr/share/doc/$pkgname-$_pkgver/LICENSE $pkgdir/usr/share/doc/$pkgname/LICENSE
}

md5sums=('418ee86e60cc80efb0dd274d9805317d')
