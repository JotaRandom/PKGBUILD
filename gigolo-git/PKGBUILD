# Maintainer: Pavlo Ilin <ilin.pa@gmail.com>
# Contributor: swiftscythe <swiftscythe@gmail.com>

pkgname=gigolo-git
pkgver=gigolo.0.4.2.r11.gff84760
pkgrel=1
epoch=
pkgdesc="Frontend to manage connections to remote filesystems using GIO/GVFS"
arch=(i686 x86_64)
url="http://goodies.xfce.org/projects/applications/gigolo"
license=('GPL2')
groups=('xfce4-git')
depends=('gtk2' 'gvfs')
makedepends=('gettext' 'git' 'intltool' 'python' 'xfce4-dev-tools')
checkdepends=()
optdepends=()
provides=("gigolo")
conflicts=('gigolo')
replaces=()
backup=()
options=()
install=
changelog=
source=("$pkgname::git+git://git.xfce.org/apps/gigolo")

noextract=()
md5sums=('SKIP')


pkgver() {
	cd "$srcdir/$pkgname"

	git describe --long | sed -E 's/([^-]*-g)/r\1/;s/-/./g'
}

build() {
	cd "$srcdir/$pkgname"

	./autogen.sh  
	./configure --prefix=/usr
	make
}

package() {
	cd "$srcdir/$pkgname"

	make DESTDIR="$pkgdir/" install
}
