pkgname=gnome-paint-bzr

post_install() {
  [ -e /usr/bin/gtk-update-icon-cache ] && gtk-update-icon-cache -q -t -f usr/share/icons/hicolor update-desktop-database -q 2> /dev/null

}

post_upgrade() {
  post_install $1
}

post_remove() {
  [ -e /usr/bin/gtk-update-icon-cache ] && gtk-update-icon-cache -q -t -f usr/share/icons/hicolor update-desktop-database -q 2> /dev/null
}
