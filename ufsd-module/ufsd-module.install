post_install() {
  echo ">> For mount NTFS or & HFS do: mount -t ufsd {device} {mount_dir}."
  echo ">> This module needs to be recompiled for every kernel version upgrade."
  KERNEL_VERSION='3.10.7-h2'
  depmod $KERNEL_VERSION > /dev/null 2>&1
}

post_upgrade() {
  post_install
}

post_remove() {
  KERNEL_VERSION='3.10.7-h2'
  depmod $KERNEL_VERSION > /dev/null 2>&1
}

